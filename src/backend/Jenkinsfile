pipeline {
    agent any
    environment {
        AWS_DEFAULT_REGION = "${env.AWS_REGION}"
        registry = "${env.BE_REGISTRY}"
        registryCredential = "user-aws"
        version = "$BUILD_NUMBER"
        app_name = "backend"
    }
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh """
                        echo 'Building Docker image...'
                        cd /var/lib/jenkins/workspace/backend-ci-pipeline/src/backend && pwd
                        docker build -t ${registry}/${app_name}-${version} .
                    """
                }
            }
        }
        stage('Build') {
            steps {
                sh 'echo Build...'
            }
        }
        stage('Deploy image') {
            steps {
                script {
                    docker.withRegistry("https://${registry}", "ecr:${AWS_DEFAULT_REGION}:${registryCredential}") {
                        sh "docker tag ${registry}/${app_name}-${version} ${registry}/${app_name}-${version}"
                        sh "docker push ${registry}/${app_name}-${version}"
                    }
                }
            }
        }
    }
}
